<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hakanyucel.gercekzamanliproje.DashboardActivity"
    android:background="@color/colorNavy">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:layout_marginTop="49dp"
        android:text="Oda Boyut Bilgilerini Giriniz :"
        android:textColor="@color/colorLightBlue" />

    <EditText
        android:id="@+id/txtRoomWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:hint="Oda genişliğini giriniz"
        android:shadowColor="@color/colorLightBlue"
        android:textColor="@color/colorLightBlue"
        android:textColorHighlight="@color/colorLightBlue"
        android:textColorHint="@color/colorLightBlue"
        android:textColorLink="@color/colorLightBlue" />

    <EditText
        android:id="@+id/txtRoomHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtRoomWidth"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:hint="Oda boyunu giriniz"
        android:shadowColor="@color/colorLightBlue"
        android:textColor="@color/colorLightBlue"
        android:textColorHighlight="@color/colorLightBlue"
        android:textColorHint="@color/colorLightBlue"
        android:textColorLink="@color/colorLightBlue" />

    <EditText
        android:id="@+id/txtRoomLenght"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtRoomHeight"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:hint="Oda yüksekliğini giriniz"
        android:shadowColor="@color/colorLightBlue"
        android:textColor="@color/colorLightBlue"
        android:textColorHighlight="@color/colorLightBlue"
        android:textColorHint="@color/colorLightBlue"
        android:textColorLink="@color/colorLightBlue" />



    <Button
        android:id="@+id/btnCalculateOxygen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtRoomLenght"
        android:layout_marginTop="20dp"
        android:text="Hesapla" />

    <Button
        android:id="@+id/btnAddOxygen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnCalculateOxygen"
        android:layout_marginTop="20dp"
        android:text="Ekle" />

    <TextView
        android:id="@+id/txtCalculationOxygenResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnAddOxygen"
        android:layout_marginTop="26dp"
        android:text="Sonuç"
        android:textColor="@color/colorLightBlue"
        android:background="@color/colorPrimary"
        android:textAlignment="center" />
</RelativeLayout>
